<meta name="theme-color" content="#9A86BF">
<meta name="color-scheme" content="light dark">
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta name="view-transition" content="same-origin">

{% set metaTitle = title or "Tyler Gaw is a Designer & Engineer in New York City, USA" -%}
{% set ogDescription = meta.description or "A personal website. Since 2006" -%}
{% set ogImage = meta.image or "/images/social-default.png" -%}

<title>{{ metaTitle }}</title>
<meta property="og:title" content="{{ metaTitle }}">
<meta name="description" content="{{ ogDescription }}">
<meta property="og:description" content="{{ ogDescription }}">
<meta property="og:image" content="{{ site.url }}{{ ogImage }}">
<meta property="og:url" content="{{ site.url }}{{ page.url }}">
<meta property="og:type" content="article">
