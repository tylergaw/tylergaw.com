<meta name="theme-color" content="#9A86BF">
<meta name="color-scheme" content="light dark">
<meta name="viewport" content="width=device-width, initial-scale=1">

{% set metaTitle = title or "Tyler Gaw is a Designer & Engineer in New York City, USA" -%}
{% set ogDescription = meta.description or "A personal website. Since 2006" -%}
{% set ogImage = meta.image or "/images/social-default.png" -%}

<title>{{ metaTitle }}</title>
<meta property="og:title" content="{{ metaTitle }}">
<meta name="twitter:title" content="{{ metaTitle }}">

<meta name="description" content="{{ ogDescription }}">
<meta property="og:description" content="{{ ogDescription }}">
<meta name="twitter:description" content="{{ ogDescription }}">

<meta property="og:image" content="{{ site.url }}{{ ogImage }}">
<meta name="twitter:image" content="{{ site.url }}{{ ogImage }}">
<meta name="twitter:card" content="{{ meta.card or 'summary_large_image' }}">

<meta property="og:url" content="{{ site.url }}{{ page.url }}">
<meta name="twitter:url" content="{{ site.url }}{{ page.url }}">

<meta name="twitter:site" content="@tylergaw">
<meta property="og:type" content="article">
